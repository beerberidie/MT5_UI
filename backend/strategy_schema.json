{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mt5ui.com/schemas/strategy.json",
  "title": "Trading Strategy",
  "description": "JSON schema for trading strategy configuration with EMNR rules",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique strategy identifier (auto-generated)",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable strategy name",
      "minLength": 1,
      "maxLength": 100
    },
    "description": {
      "type": "string",
      "description": "Strategy description",
      "maxLength": 500
    },
    "enabled": {
      "type": "boolean",
      "description": "Whether strategy is active",
      "default": true
    },
    "symbol": {
      "type": "string",
      "description": "Trading symbol (e.g., EURUSD, XAUUSD)",
      "pattern": "^[A-Z0-9]+$"
    },
    "timeframe": {
      "type": "string",
      "description": "Chart timeframe",
      "enum": ["M1", "M5", "M15", "M30", "H1", "H4", "D1"]
    },
    "sessions": {
      "type": "array",
      "description": "Active trading sessions",
      "items": {
        "type": "string",
        "enum": ["London", "NewYork", "Tokyo", "Sydney"]
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "indicators": {
      "type": "object",
      "description": "Technical indicator configurations",
      "properties": {
        "ema": {
          "type": "object",
          "properties": {
            "fast": {"type": "integer", "minimum": 1, "maximum": 200},
            "slow": {"type": "integer", "minimum": 1, "maximum": 200}
          },
          "required": ["fast", "slow"]
        },
        "rsi": {
          "type": "object",
          "properties": {
            "period": {"type": "integer", "minimum": 2, "maximum": 100},
            "overbought": {"type": "integer", "minimum": 50, "maximum": 100},
            "oversold": {"type": "integer", "minimum": 0, "maximum": 50}
          },
          "required": ["period", "overbought", "oversold"]
        },
        "macd": {
          "type": "object",
          "properties": {
            "fast": {"type": "integer", "minimum": 1, "maximum": 100},
            "slow": {"type": "integer", "minimum": 1, "maximum": 100},
            "signal": {"type": "integer", "minimum": 1, "maximum": 100}
          },
          "required": ["fast", "slow", "signal"]
        },
        "atr": {
          "type": "object",
          "properties": {
            "period": {"type": "integer", "minimum": 1, "maximum": 100},
            "multiplier": {"type": "number", "minimum": 0.1, "maximum": 10}
          },
          "required": ["period", "multiplier"]
        }
      }
    },
    "conditions": {
      "type": "object",
      "description": "EMNR condition rules",
      "properties": {
        "entry": {
          "type": "array",
          "description": "Entry conditions (must all be true)",
          "items": {"type": "string"},
          "minItems": 1
        },
        "exit": {
          "type": "array",
          "description": "Exit conditions (any can trigger exit)",
          "items": {"type": "string"}
        },
        "strong": {
          "type": "array",
          "description": "Strong signal conditions (boost confidence)",
          "items": {"type": "string"}
        },
        "weak": {
          "type": "array",
          "description": "Weak signal conditions (reduce confidence)",
          "items": {"type": "string"}
        }
      },
      "required": ["entry"]
    },
    "strategy": {
      "type": "object",
      "description": "Strategy execution settings",
      "properties": {
        "direction": {
          "type": "string",
          "description": "Trading direction",
          "enum": ["long", "short", "both"]
        },
        "min_rr": {
          "type": "number",
          "description": "Minimum risk-reward ratio",
          "minimum": 1.0,
          "maximum": 10.0
        },
        "news_embargo_minutes": {
          "type": "integer",
          "description": "Minutes to avoid trading before/after news",
          "minimum": 0,
          "maximum": 120
        },
        "invalidations": {
          "type": "array",
          "description": "Conditions that invalidate the trade setup",
          "items": {"type": "string"}
        },
        "max_risk_pct": {
          "type": "number",
          "description": "Maximum risk per trade as percentage of account",
          "minimum": 0.001,
          "maximum": 0.1,
          "default": 0.01
        }
      },
      "required": ["direction", "min_rr"]
    },
    "created_at": {
      "type": "string",
      "description": "ISO 8601 timestamp of creation",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "description": "ISO 8601 timestamp of last update",
      "format": "date-time"
    },
    "created_by": {
      "type": "string",
      "description": "User who created the strategy",
      "default": "user"
    }
  },
  "required": [
    "name",
    "symbol",
    "timeframe",
    "sessions",
    "indicators",
    "conditions",
    "strategy"
  ],
  "additionalProperties": false
}

